<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="设备名称" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_device"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_device"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_lubricatingPart_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="润滑部位:" />

            <TextView
                android:id="@+id/tv_lubricatingPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_lubricatingPart_left"
                android:layout_toRightOf="@+id/tv_lubricatingPart_left"
                android:textColor="@color/colorTask" />

            <TextView
                android:id="@+id/tv_greasePart_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_lubricatingPart"
                android:text="给油脂部位:" />

            <TextView
                android:id="@+id/tv_greasePart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_greasePart_left"
                android:layout_toRightOf="@+id/tv_greasePart_left"
                android:textColor="@color/colorTask" />

            <TextView
                android:id="@+id/tv_lubricatingPoint_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_greasePart"
                android:text="润滑点数:" />

            <TextView
                android:id="@+id/tv_lubricatingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_lubricatingPoint_left"
                android:layout_toRightOf="@+id/tv_lubricatingPoint_left"
                android:textColor="@color/colorTask" />
            <TextView
                android:id="@+id/tv_greaseTool_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tv_lubricatingPoint_left"
                android:text="給油脂工具:" />

            <TextView
                android:id="@+id/tv_greaseTool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_greaseTool_left"
                android:layout_toRightOf="@+id/tv_greaseTool_left"
                android:textColor="@color/colorTask" />

            <TextView
                android:id="@+id/tv_lubricatingNumber_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tv_greaseTool_left"
                android:text="润滑牌号:" />

            <TextView
                android:id="@+id/tv_lubricatingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_lubricatingNumber_left"
                android:layout_toRightOf="@+id/tv_lubricatingNumber_left"
                android:textColor="@color/colorTask" />
        </RelativeLayout>


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_one"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_add_oil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/tv_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:text="补充油标准" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_add_title">

                <TextView
                    android:id="@+id/tv_add_oil_mass_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="油量:" />

                <TextView
                    android:id="@+id/tv_add_oil_mass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_add_oil_mass_left"
                    android:layout_toRightOf="@+id/tv_add_oil_mass_left"
                    android:textColor="@color/colorTask" />

                <TextView
                    android:id="@+id/tv_add_oil_cycle_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_add_oil_mass"
                    android:text="补油周期:" />

                <TextView
                    android:id="@+id/tv_add_oil_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_add_oil_cycle_left"
                    android:layout_toRightOf="@+id/tv_add_oil_cycle_left"
                    android:textColor="@color/colorTask" />

                <TextView
                    android:id="@+id/tv_add_oil_check_cycle_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_add_oil_cycle"
                    android:text="检查周期:" />

                <TextView
                    android:id="@+id/tv_add_oil_check_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_add_oil_check_cycle_left"
                    android:layout_toRightOf="@+id/tv_add_oil_check_cycle_left"
                    android:textColor="@color/colorTask" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_add_oil"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_update_oil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_update_oil_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:text="更换油标准" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_update_oil_title">

                <TextView
                    android:id="@+id/tv_update_oil_mass_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="油量:" />

                <TextView
                    android:id="@+id/tv_update_oil_mass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_update_oil_mass_left"
                    android:layout_toRightOf="@+id/tv_update_oil_mass_left"
                    android:textColor="@color/colorTask" />

                <TextView
                    android:id="@+id/tv_update_oil_cycle_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_update_oil_mass"
                    android:text="周期:" />

                <TextView
                    android:id="@+id/tv_update_oil_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_update_oil_cycle_left"
                    android:layout_toRightOf="@+id/tv_update_oil_cycle_left"
                    android:textColor="@color/colorTask" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>